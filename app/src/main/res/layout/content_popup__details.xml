<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rf.weather_forecast.POPup_Details"
    tools:showIn="@layout/activity_popup__details">
    <TextView
        android:id="@+id/dayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/weather_icon"
        android:layout_toStartOf="@+id/weather_icon" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textSize="15sp"
        android:layout_below="@+id/dayName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/weather_icon"
        android:layout_toStartOf="@+id/weather_icon" />

    <TextView
        android:id="@+id/max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weather_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/weather_icon"
        android:layout_toStartOf="@+id/weather_icon"
        android:gravity="center"
        android:text="67"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="34"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/weather_desc"
        android:layout_alignBottom="@+id/weather_desc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/weather_icon"
        android:layout_toStartOf="@+id/weather_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignTop="@+id/min"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:text="    O         " />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pressure"
        android:layout_alignEnd="@+id/weather_desc"
        android:layout_alignLeft="@+id/date"
        android:layout_alignRight="@+id/weather_desc"
        android:layout_alignStart="@+id/date"
        android:layout_marginBottom="28dp"
        android:layout_toStartOf="@+id/weather_desc"
        android:paddingStart="20dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wind"
        android:layout_alignEnd="@+id/humidity"
        android:layout_alignLeft="@+id/humidity"
        android:layout_alignRight="@+id/humidity"
        android:layout_alignStart="@+id/humidity"
        android:layout_marginBottom="25dp"
        android:paddingStart="20dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pressure"
        android:layout_alignLeft="@+id/pressure"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/pressure"
        android:layout_alignStart="@+id/pressure"
        android:layout_marginBottom="34dp"
        android:paddingStart="20dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/location"
        android:layout_alignEnd="@+id/pressure"
        android:layout_alignLeft="@+id/location"
        android:layout_alignRight="@+id/pressure"
        android:layout_alignStart="@+id/location"
        android:layout_marginBottom="49dp"
        android:paddingStart="20dp"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dayName"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/today_sunny" />

    <TextView
        android:id="@+id/weather_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/weather_icon"
        android:layout_alignRight="@+id/weather_icon"
        android:layout_below="@+id/weather_icon"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/min"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/max"
        android:layout_toLeftOf="@+id/weather_icon"
        android:layout_toStartOf="@+id/weather_icon"
        android:gravity="left"
        android:text="O    "
        android:textSize="25sp" />

</RelativeLayout>
