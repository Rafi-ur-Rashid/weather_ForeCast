<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="TextView"
        android:textSize="27sp"
        android:layout_alignBaseline="@+id/today_Max"
        android:layout_alignBottom="@+id/today_Max"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon" />

    <TextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Day"
        android:layout_alignLeft="@+id/Day"
        android:layout_alignRight="@+id/Day"
        android:layout_alignStart="@+id/Day"
        android:layout_below="@+id/today_Max"
        android:layout_marginTop="33dp"
        android:paddingStart="8dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/today_Max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="10dp"
        android:text="25.45"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/today_Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weather"
        android:layout_alignBottom="@+id/weather"
        android:layout_toLeftOf="@+id/minDegree"
        android:layout_toStartOf="@+id/minDegree"
        android:gravity="center_vertical|center_horizontal"
        android:text="16.45"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Day"
        android:layout_marginLeft="5dp"
        app:srcCompat="@mipmap/cloud" />

    <TextView
        android:id="@+id/maxDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="o" />

    <TextView
        android:id="@+id/minDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/today_Min"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="5dp"
        android:text=" o"
        android:layout_alignRight="@+id/today_Max"
        android:layout_alignEnd="@+id/today_Max" />

</RelativeLayout>